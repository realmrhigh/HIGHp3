<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.player.PlayerFragment">

    <TextView
        android:id="@+id/tv_current_track_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No track playing"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <SeekBar
        android:id="@+id/sb_track_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_current_track_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/ll_playback_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sb_track_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_previous_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_stop_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_next_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_volume_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        app:layout_constraintTop_toBottomOf="@id/ll_playback_controls"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <SeekBar
        android:id="@+id/sb_volume_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_volume_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
